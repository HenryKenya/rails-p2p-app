<div class="container">
<h1 class="text-center">Deposit, transfer or withdraw <sup class="alpha">alpha</sup></h1>
<% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
       <div class="col-sm-12 transaction-form">
                <%= bootstrap_form_for(@transaction, :html => {:class => "form-inline"}) do |f| %>
                 <div class="form-group form-space">
                    <div class="input-group">
                    <div class="input-group-addon">Ksh.</div>
                    <%= f.text_field :amount, placeholder: 'Amount' %>
                 </div>
                 </div>
                 <div class="form-group form-space"> 
                        <%= f.collection_select :category_id, Category.all, :id, :name, :prompt => "Transaction type", class: "selectpicker"%>
                 </div>
                 <div class="form-group form-space">
                        <%= f.collection_select :recipient_id, User.all, :id, :email, :prompt => "Recipient", class: "selectpicker"%>
                 </div>
                    <%= f.hidden_field :sender_id, :value => @id%>
                    <%= f.submit "Perfom transaction", class: 'btn btn-transaction' %>
                <% end %>
        </div>
    </div>
</div>