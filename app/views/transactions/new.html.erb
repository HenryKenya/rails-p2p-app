<div class="container">
<% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
       <div class="col-sm-12 transaction-form">
                <%= bootstrap_form_for(@transaction, :html => {:class => "form-inline"}) do |f| %>
                 <div class="form-group">
                    <div class="input-group">
                    <div class="input-group-addon">Ksh.</div>
                    <%= f.text_field :amount, placeholder: 'Amount' %>
                 </div>
                 <div class="form-group"> 
                     <%= select_tag 'transaction[category_id]', options_for_select(@categories.collect{ |c| [c.name, c.id]}),
                        class: 'selectpicker' %>  
                 </div>
                 <div class="form-group">
                     <%= select_tag 'transaction[recipient_id]', options_for_select(@users.collect{ |u| [u.email, u.id]}), class: 'selectpicker' %>
                 </div>
                    <%= f.hidden_field :sender_id, :value => @id%>
                    <%= f.submit "Complete transaction", class: 'btn btn-transaction' %>
                <% end %>
        </div>
    </div>
</div>